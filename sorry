  <script>
    const music = document.getElementById('bgm');
    let playing = false;

    function toggleMusic() {
      if (!playing) {
        music.play();
        playing = true;
        document.getElementById('musicBtn').textContent = '‚è∏Ô∏è Pausar';
      } else {
        music.pause();
        playing = false;
        document.getElementById('musicBtn').textContent = 'üéµ M√∫sica';
      }
    }
</script>
